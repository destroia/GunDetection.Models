<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GunDetection.App.Views.UpdateLocationView" Title="Update Location">
    <ContentPage.Content>
        <StackLayout Margin="20,-110,20,20"  VerticalOptions="CenterAndExpand">
            <Label Text="Location" TextColor="#000000" FontAttributes="Bold" />
            <Entry x:Name="txtLocation" TextColor="Black" PlaceholderColor="Gray" Placeholder="Name of location" ></Entry>
            <Button  x:Name="btn" BackgroundColor="Black" Text="Save" TextColor="White" Clicked="Button_Save"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>