<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GunDetection.App.Views.SettingsView" Title="Settings">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout TranslationY="-50"  VerticalOptions="CenterAndExpand" >
                <Button BorderColor="Black" FontSize="24" Margin="20"
                        HeightRequest="70" BorderWidth="2" CornerRadius="15"
                        TextColor="Black" Text="Camera"     BackgroundColor="White" Clicked="Button_ClickedCamera">

                </Button>
                <Button BorderColor="Black" FontSize="24" Margin="20"
                        HeightRequest="70" BorderWidth="2" CornerRadius="15"
                        TextColor="Black" Text="User"  BackgroundColor="White" >
                    
                </Button>

                <Button BorderColor="Black" Margin="20" 
                        HeightRequest="70"  BorderWidth="2"
                        BackgroundColor="White" FontSize="24" 
                        TextColor="Black" Text="Location" CornerRadius="15" Clicked="Button_ClickedSettings" >
                    
                </Button>
                
                

            </StackLayout>
        </ScrollView>
       
    </ContentPage.Content>
</ContentPage>